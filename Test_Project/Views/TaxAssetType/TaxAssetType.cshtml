@model Test_Project.Models.TaxAssetType
@{
    ViewBag.Title = "TaxAssetType";
}

@Styles.Render("~/CustomCSS/DateTimePicker")
@Scripts.Render("~/bundles/DateTimePicker")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Styles.Render("~/CustomCSS/DataTable")

<style>
    .InputText {
        float: left;
        width: 95%;
    }

    .spnDataTableEdit {
        font-weight: bold;
        color: #0083bd;
        margin-left: 10px;
        cursor: pointer;
    }

    .spnDataTableDelete {
        font-weight: bold;
        color: red;
        margin-left: 10px;
        cursor: pointer;
    }

    .addSpan {
        float: right;
        margin-top: 7px;
        margin-left: 5px;
        color: #17a217;
        cursor: pointer;
    }

    .minusSpan {
        float: right;
        margin-top: 7px;
        margin-left: 5px;
        color: #ff0000;
        cursor: pointer;
    }

    .planingDetailInputGroupCls {
        width: 95%;
        float: left;
    }
</style>

<div class="row head">
    @*<div class="col-md-4 col-md-offset-4 well" style="text-align: center; padding: 50px">Tax Asset Type </div>*@
    <div class="col-md-4 col-md-offset-4 page-title-global" style="text-align: center;padding: 50px">Tax Asset Type</div>
</div>


<div class="row">
    <div class="modal fade" id="frmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Tax Asset Type</h4>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @Class = "form-horizontal", @id = "taxAssetTypeForm" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <label class="col-md-4">Name</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Name, new { Style = "", @class = "form-control", @autocomplete = "off", @id = "Name", placeholder = "Tax Asset Type Name" })
                                @*<span class="required">*</span>
                                @Html.ValidationMessageFor(model => model.Name)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4">Description</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Description, new { Style = "", @class = "form-control", @autocomplete = "off", @id = "Description", placeholder = "Description" })
                                @*<span class="required">*</span>
                                @Html.ValidationMessageFor(model => model.Name)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4">Status</label>
                            <div class="col-md-1">@Html.CheckBoxFor(m => m.Status, new {Style = "", @class = "", @id = "Status" })</div>
                        </div>

                        @*<div class="form-group">
                                <label class="col-md-4"></label>
                                <div class="col-md-8">
                                    @Html.CheckBoxFor(m => m.Status, new { Style = "", @class = "form-control InputText" })
                                    <div class="col-md-11">
                                        <label> Status</label>
                                    </div>
                                </div>
                            </div>*@
                    }
                </div>
                <div class="modal-footer">


                    <input id="editBtn" type="button" value="Edit" class="btn_custom btn_custom-warning" />

                    <input id="saveBtn" type="button" value="Save" class="btn btn-success" />

                    <input id="deleteBtn" style="display: none;" type="button" value="Delete" class="btn_custom btn_custom-danger" />

                    <input id="btnClear" style="display: none;" type="button" value="Clear" class="btn_custom btn_custom-primary" />

                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12 margin-top10">
    <table id="tableElement" class="table table-bordered table-condensed table-hover table-responsive" style="width: 100%;"></table>
</div>

@Scripts.Render("~/bundles/DateTimePicker")
@Scripts.Render("~/bundles/DataTable")
<script src="~/Scripts/Custom/TaxAssetType.js"></script>