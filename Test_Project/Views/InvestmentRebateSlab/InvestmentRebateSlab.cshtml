@model Test_Project.Models.TaxInvestmentRebateSlab
@{
    ViewBag.Title = "InvestmentRebateSlab";
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Styles.Render("~/CustomCSS/DataTable")

<style>
    .spnDataTableEdit {
        font-weight: bold;
        color: #0083bd;
        margin-left: 10px;
        cursor: pointer;
    }

    .spnDataTableDelete {
        font-weight: bold;
        color: red;
        margin-left: 10px;
        cursor: pointer;
    }
</style>


<div class="row">
    @*<div class="col-md-4 col-md-offset-4 well page-title-global" style="text-align: center; padding: 30px">Tax Area</div>*@
    <div class="col-md-4 col-md-offset-4 page-title-global" style="text-align: center;padding: 50px">Tax Investment Rebate Slab</div>
</div>

@*Show and Hide Columns *@
<div class="row">
    <div class="modal fade" id="frmModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="max-width: 80%">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="modal-title">Tax Investment Rebate Slab</h4>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
                <div class="modal-body">

                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @Class = "form-horizontal", @Id = "TaxInvestmentRebateSlabFormId" }))
                    {
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label class="col-md-3">Limit Above</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.LimitAbove, new { Style = "", @class = "form-control", @autocomplete = "off", @id = "LimitAbove", placeholder = "Limit Above" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3">Rebate Rate</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.RebateRate, new { Style = "", @class = "form-control", @autocomplete = "off", @id = "RebateRate", placeholder = "Rebate Rate" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3">Description</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Description, new { Style = "", @class = "form-control", @autocomplete = "off", @id = "Description", placeholder = "Description" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3"><label>Year</label></div>
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.ValidFromHrmFinancialYearId, new SelectList("", ""), new {@class = "form-control input-sm"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3">Status</label>
                            <div class="col-md-1">@Html.CheckBoxFor(m => m.Status, new { Style = "", @class = "", @id = "Status" })</div>
                        </div>
                    }

                </div>
                <div class="modal-footer">
                    <button type="button" style="width: 80px" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input id="btnEdit" type="button" style="width: 70px" value="Edit" class="btn btn-warning" />
                    <input id="btnSave" type="button" style="width: 70px" value="Save" class="btn btn-success" />
                    <input id="btnClear" style="display: none;" type="button" style="width: 70px" value="Clear" class="btn btn-primary" />
                    <input id="btnDelete" style="display: none;" type="button" value="Delete" class="btn btn_danger" />
                </div>
            </div>
        </div>
    </div>
</div>
@* Show and Hide Columns  *@

<div class="row">
    <div class="col-md-12 margin-top:30px">
        <table id="tableElement" class="table table-bordered table-condensed table-hover table-responsive" style="width: 100%;"></table>
    </div>
</div>
@*</div>*@

@Scripts.Render("~/bundles/DataTable")
<script src="~/Scripts/Custom/InvestmentRebateSlab.js"></script>

